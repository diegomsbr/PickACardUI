<Window x:Class="PickACardUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PickACardUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Slider HorizontalAlignment="Left" Margin="94,67,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="120,140,0,0" VerticalAlignment="Top"/>
        <ListBox Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" Margin="20,20,20,20"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="96,39,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
